[
  {rabbit,
{% if pillar['rabbitmq-ssl'] %}
    [
     {ssl_listeners, [5671]},
     {ssl_options, [{cacertfile,"/etc/pki/{{ca_name}}/{{ca_name}}_ca_cert.crt"},
                    {certfile,"{{ cert_path }}.crt"},
                    {keyfile,"{{ cert_path }}.key"},
                    {verify,verify_peer},
                    {fail_if_no_peer_cert,false}]}
    ]
{% endif %}
  }
].
